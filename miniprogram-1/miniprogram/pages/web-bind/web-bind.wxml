<view class="page {{themeClass}}">
  <view class="card">
    <view class="title">绑定微信</view>
    <view class="sub">确认后，将把当前微信绑定到网页账号</view>

    <view class="meta" wx:if="{{sid}}">
      <view class="meta-item">会话：{{sid}}</view>
    </view>

    <view class="error" wx:if="{{error}}">{{error}}</view>
    <view class="ok" wx:if="{{done}}">绑定成功</view>

    <view class="actions">
      <button class="btn primary" loading="{{loading}}" disabled="{{loading || done}}" bindtap="onConfirm">确认</button>
      <button class="btn ghost" disabled="{{loading}}" bindtap="onCancel">取消</button>
    </view>
  </view>
</view>
